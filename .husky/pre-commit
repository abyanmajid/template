# Color output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Change to git root directory
cd "$(git rev-parse --show-toplevel)"

echo "${YELLOW}Running pre-commit checks...${NC}"

# Function to run checks
run_check() {
  local name=$1
  local command=$2
  echo "\n${YELLOW}â†’ ${name}${NC}"
  if eval "$command"; then
    echo "${GREEN}âœ“ ${name} passed${NC}"
    return 0
  else
    echo "${RED}âœ— ${name} failed${NC}"
    return 1
  fi
}

# Track failures
FAILED=0

# Type checking
run_check "Type checking a3n-api" "cd apps/a3n-api && bun run typecheck" || FAILED=1

# Linting
run_check "Linting a3n-api" "cd apps/a3n-api && bun run lint" || FAILED=1

# Tests
run_check "Running tests" "cd apps/a3n-api && bun run test" || FAILED=1

# Check for .only in tests (prevents accidentally committed focused tests)
if git diff --cached --name-only | grep -E '\.(test|spec)\.(ts|tsx|js|jsx)$' | xargs grep -l '\.only(' 2>/dev/null; then
  echo "${RED}âœ— Found .only() in test files. Remove before committing.${NC}"
  FAILED=1
else
  echo "${GREEN}âœ“ No .only() in tests${NC}"
fi

# Check for console.log in staged files (double-check beyond ESLint)
if git diff --cached --name-only | grep -E '\.(ts|tsx|js|jsx)$' | grep -v '.test.' | grep -v '.spec.' | xargs grep -n 'console\.log' 2>/dev/null; then
  echo "${YELLOW}âš  Warning: Found console.log statements (ESLint should catch these)${NC}"
fi

# Final result
if [ $FAILED -eq 1 ]; then
  echo "\n${RED}Pre-commit checks failed. Commit aborted.${NC}"
  echo "${YELLOW}Fix the issues above and try again.${NC}"
  exit 1
else
  echo "\n${GREEN}All pre-commit checks passed! ðŸŽ‰${NC}"
  exit 0
fi
